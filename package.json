{
  "name": "main-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "npm run build:library",
    "build:library": "ng build ng-text-highlighter --configuration=production",
    "build:app": "ng build main-app --configuration=production",
    "build": "npm run build:library && npm run build:app",
    "build:prod": "npm run build:library && npm run build:app --configuration=production",
    "serve": "npm run build:library && ng serve main-app",
    "serve:prod": "npm run build:library && ng serve main-app --configuration=production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.6",
    "@angular/common": "^19.2.6",
    "@angular/compiler": "^19.2.6",
    "@angular/core": "^19.2.6",
    "@angular/forms": "^19.2.6",
    "@angular/platform-browser": "^19.2.6",
    "@angular/platform-browser-dynamic": "^19.2.6",
    "@angular/router": "^19.2.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.7",
    "@angular/cli": "~19.2.7",
    "@angular/compiler-cli": "^19.2.6",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^19.2.0",
    "typescript": "~5.8.3"
  }
}